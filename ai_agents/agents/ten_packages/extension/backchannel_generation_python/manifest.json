{
  "type": "extension",
  "name": "backchannel_generation_python",
  "version": "0.11.53",
  "display_name": {
    "locales": {
      "en-US": {
        "content": "Rule-based backchannel generation module"
      }
    }
  },
  "description": {
    "locales": {
      "en-US": {
        "content": "Using simple heuristics based on pitch and silence detection, this module generates backchannel signals in real-time during conversations. It can be used as a template for building more complex backchannel generation systems or for educational purposes to understand the basics of audio processing for conversational agents."
      }
    }
  },
  "readme": {
    "locales": {
      "en-US": {
        "import_uri": "docs/README.en-US.md"
      }
    }
  },
  "tags": [
    "python",
    "template"
  ],
  "dependencies": [
    {
      "type": "system",
      "name": "ten_runtime_python",
      "version": "0.11.53"
    }
  ],
  "package": {
    "include": [
      "manifest.json",
      "property.json",
      "pyproject.toml",
      "tests/**.py",
      "tests/pyproject.toml",
      "tests/bin/*",
      "requirements.txt",
      "docs/**",
      ".vscode/**"
    ]
  },
  "api": {
    "property": {
      "properties": {}
    },
    "audio_frame_in": [
      {
        "name": "pcm_frame"
      }
    ],
    "audio_frame_out": [
      {
        "name": "pcm_frame"
      }
    ],
    "cmd_in": [
      {
        "name": "start_of_sentence"
      },
      {
        "name": "end_of_sentence"
      }
    ],
    "data_in": [
      {
        "name": "text_data"
      }
    ]
  },
  "scripts": {
    "test": "tests/bin/start"
  }
}